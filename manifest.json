{
    "manifest_version": 3,
    "name": "Connect+",
    "version": "0.1",
    "description": "Click connects button automatically for people in LinkedIn search results",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": [
                "https://www.linkedin.com/search/results/people/*"
            ]
        }
    ],
    "icons": {
        "128": "icons/link.png"
    },
    "permissions": ["activeTab"] 
}